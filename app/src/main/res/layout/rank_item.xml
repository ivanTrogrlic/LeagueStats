<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:padding="4dp"
    app:cardBackgroundColor="@color/rank_item_background"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rank_icon"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/rank_icon"
            android:src="@drawable/ic_unranked" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/queue_type"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/rank"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_data_placeholder"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryLight" />

            <TextView
                android:id="@+id/league_points"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_data_placeholder"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/wins_losses"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wins_losses_default"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/win_ratio_default"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/win_loss_ratio"
                    style="@style/Base.TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_data_placeholder"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/rank_name"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_data_placeholder"
                android:textAlignment="center" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
