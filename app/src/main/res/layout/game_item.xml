<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <TextView
            android:id="@+id/match_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ranked solo" />

        <TextView
            android:id="@+id/match_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/match_length"
            android:paddingEnd="16dp"
            android:text="Yesterday" />

        <TextView
            android:id="@id/match_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="23:23" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:padding="4dp">

            <ImageView
                android:id="@+id/champion_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_lol" />

            <ImageView
                android:id="@+id/summoner_spell_1"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_below="@id/champion_icon"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_lol" />

            <ImageView
                android:id="@+id/summoner_spell_2"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_below="@id/champion_icon"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/summoner_spell_1"
                android:paddingStart="2dp"
                android:src="@drawable/ic_lol" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/1/1" />

            <TextView
                android:id="@+id/kda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.21 KDA" />

            <TextView
                android:id="@+id/cs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="124 CS" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/item_1"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/ic_lol" />

            <ImageView
                android:id="@+id/item_2"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_toEndOf="@id/item_1"
                android:src="@drawable/ic_lol" />

            <ImageView
                android:id="@+id/item_3"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_toEndOf="@id/item_2"
                android:src="@drawable/ic_lol" />

            <ImageView
                android:id="@+id/item_4"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_below="@id/item_1"
                android:src="@drawable/ic_lol" />

            <ImageView
                android:id="@+id/item_5"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_below="@id/item_2"
                android:layout_toEndOf="@id/item_4"
                android:src="@drawable/ic_lol" />

            <ImageView
                android:id="@+id/item_6"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_below="@id/item_3"
                android:layout_toEndOf="@id/item_5"
                android:src="@drawable/ic_lol" />

            <ImageView
                android:id="@+id/trinket"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@id/item_3"
                android:src="@drawable/ic_lol" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
